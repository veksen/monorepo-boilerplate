{
  "name": "monorepo-boilerplate",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "dev": "turbo run dev",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage"
  },
  "devDependencies": {
    "eslint-plugin-turbo": "^2.7.5",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "turbo": "^2.7.5"
  },
  "engines": {
    "node": ">=22",
    "npm": ">=10.9"
  },
  "packageManager": "npm@10.9.4"
}
